{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "webpack-dev-server",
    "build": "rimraf ./dist && webpack --mode production",
    "release": "lerna publish"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-basic-styles": "^15.0.0",
    "@ckeditor/ckeditor5-dev-utils": "^12.0.5",
    "@ckeditor/ckeditor5-editor-classic": "^15.0.0",
    "@ckeditor/ckeditor5-essentials": "^15.0.0",
    "@ckeditor/ckeditor5-heading": "^15.0.0",
    "@ckeditor/ckeditor5-link": "^15.0.0",
    "@ckeditor/ckeditor5-list": "^15.0.0",
    "@ckeditor/ckeditor5-media-embed": "^15.0.0",
    "@ckeditor/ckeditor5-paragraph": "^15.0.0",
    "@ckeditor/ckeditor5-theme-lark": "^15.0.0",
    "postcss-loader": "3",
    "raw-loader": "3",
    "style-loader": "1",
    "webpack": "4",
    "webpack-cli": "3"
  },
  "devDependencies": {
    "@ckeditor/ckeditor5-inspector": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.7",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "webpack-dev-server": "^3.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
